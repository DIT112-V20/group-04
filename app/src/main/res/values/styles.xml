<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/raleway</item>
    </style>

    <style
        name="standardButton">
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="standardText">
        <item name="android:textColor">@color/colorDeepJungleGreen</item>
    </style>
</resources>
